<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgetProjekt.View.WeightHistoryPage"
             Title="WeightHistoryPage">
    <VerticalStackLayout>
        
        <Label 
             x:Name="WeightHistoryLabel"
            TextColor="White"></Label>
        <ListView ItemsSource="{Binding TheWeights}" x:Name=" WeightListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding NewWeight}" TextColor="White"></Label>
                            <Label Text="{Binding WeightRecorded} " TextColor="White"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>